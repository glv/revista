<div class="w-measure">
  <div class="card">
    <article class="card-body p-5">
        <header class="d-flex justify-content-between align-items-center mb-4">
          <h1><%= @post.title %></h1>
          <%= link "Edit", to: Routes.post_path(@conn, :edit, @post), class: "btn btn-outline-secondary" %>
        </header>
        <%= Phoenix.HTML.raw(@post.body) %>
    </article>
  </div>
</div>
